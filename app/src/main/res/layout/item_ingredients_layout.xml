<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:padding="4dp"
    android:background="#ffffff"
    android:layout_marginRight="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginLeft="16dp"
        android:text="Quantity:"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tv_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_quantity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintLeft_toRightOf="@id/tv_quantity"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_marginLeft="16dp"
        android:text="Measure:"
        app:layout_constraintTop_toBottomOf="@id/tv_quantity"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/tv_measure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_measure_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cup"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintLeft_toRightOf="@id/tv_measure"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_quantity_value" />

    <TextView
        android:text="Ingredient:"
        app:layout_constraintTop_toBottomOf="@id/tv_measure"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/tv_ingredient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_ingredient_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bittersweet chocolate (60-70 carbon)"
        android:layout_marginLeft="8dp"
        android:lines="2"
        android:maxLines="2"
        android:singleLine="false"
        app:layout_constraintLeft_toRightOf="@id/tv_ingredient"
        app:layout_constraintTop_toBottomOf="@id/tv_measure_value" />
</android.support.constraint.ConstraintLayout>